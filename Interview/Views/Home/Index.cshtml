@{
    ViewData["Title"] = "String Manipulation";
}
<header class="topheader" style="padding-top: 40px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="header-content">
                    <h1 class="main-title">String Manipulation</h1>
                    <div class="col-lg-12" style="padding-top: 40px; padding-bottom: 40px;">
                        <input id="stringValue" autofocus class="input-lg" placeholder="Enter phrase..." style="height: 50px; max-width: 100%; width: 100%; color:black" data-bind="value:stringValue, valueUpdate: 'keyup'" />
                        <div><input type="checkbox" data-bind="checked:performServerSide">Server-side string manipulation</div>                        
                        <div data-bind="visible:showError"><p data-bind="text:invalidText" style="color: black;"></p></div>
                    </div>
                    <div class="col-lg-6">
                        <a href="" class="btn btn-outline btn-xl btn-block" id="uppercase" data-bind="click:function(){optionClick(0)}">Uppercase</a>
                    </div>
                    <div class="col-lg-6">
                        <a href="" class="btn btn-outline btn-xl btn-block" id="reverse" data-bind="click:function(){optionClick(1)}">Reverse</a>
                    </div>                    
                </div>
            </div>
        </div>
    </div>
</header>
<section data-bind="visible:resultsVisible" class="bg-success" id="stringmanipulation" style="padding-top: 10px; padding-bottom: 100px;">
    <div class="container">
        <div class="col-lg-12">
            <h2 class="main-title">String Manipulation Results</h2>
            <p class="main-title" data-bind="text:functionTitle"></p>
            <div data-bind="visible:isLoading" style="text-align:center" id="load-results"><i class="fas fa-cog fa-4x fa-spin"></i></div>
            <div class="col-lg-12" style="text-align: center; color: Black;">
                <p style="font-size: 5em; word-wrap:break-word" data-bind="text:resultValue"></p>
            </div>
        </div>
    </div>
</section>

<section class="socialmedia bg-primary" id="socialmedia">
    <div class="container">
        <h2>
            <i class="far fa-heart"></i>
            Social Media
        </h2>
        <ul class="list-inline list-social">
            <li class="social-twitter">
                <a href="https://twitter.com/">
                    <i class="fab fa-twitter"></i>
                </a>
            </li>
            <li class="social-facebook">
                <a href="https://www.facebook.com/">
                    <i class="fab fa-facebook-f"></i>
                </a>
            </li>
            <li class="social-google-plus">
                <a href="https://plus.google.com/">
                    <i class="fab fa-google-plus-g"></i>
                </a>
            </li>
            <li class="social-instagram">
                <a href="https://www.instagram.com/">
                    <i class="fab fa-instagram"></i>
                </a>
            </li>
        </ul>
    </div>
</section>

@Html.Hidden("getresulturl", Url.Action("StringManipulation"))
@section scripts{
    <script src="~/js/StringManipulation.js"></script>
}